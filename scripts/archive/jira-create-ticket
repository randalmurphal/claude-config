#!/usr/bin/env bash
set -euo pipefail

# jira-create-ticket - Create a new Jira ticket
#
# Usage: jira-create-ticket <project-key> <issue-type> <summary> [description]
# Example: jira-create-ticket INT Task "Add rate limiting" "Implement rate limiting on auth endpoints"
#
# Common issue types: Task, Bug, Story, Epic, Sub-task
# Returns: Created ticket key and URL
# Exit codes: 0 = success, 1 = usage error, 2 = not found, 3 = API error, 4 = credentials missing

# Get script directory
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
CREDS_FILE="${SCRIPT_DIR}/.jira-credentials"

# Function to show credential setup instructions
show_credential_instructions() {
    cat >&2 <<'EOF'
❌ Jira credentials not found or incomplete.

STOP: This script requires Jira API credentials to be configured.

The script uses the same credentials as the Jira MCP. Make sure these
environment variables are set:

    ATLASSIAN_API_TOKEN="your-token"
    ATLASSIAN_SITE_NAME="fortressinfosec"
    ATLASSIAN_USER_EMAIL="your.email@fortressinfosec.com"

These should already be set in your environment if the Jira MCP is working.

If not set, the credentials file (~/.claude/scripts/.jira-credentials) will
try to load them from the environment, but they must exist there first.

Check: env | grep ATLASSIAN

EOF
    exit 4
}

# Check if credentials file exists
if [ ! -f "$CREDS_FILE" ]; then
    echo "❌ Credentials file not found: $CREDS_FILE" >&2
    echo "" >&2
    show_credential_instructions
fi

# Source credentials
# shellcheck source=/dev/null
source "$CREDS_FILE"

# Validate required credentials are set
if [ -z "${ATLASSIAN_API_TOKEN:-}" ]; then
    echo "❌ ATLASSIAN_API_TOKEN not set" >&2
    echo "" >&2
    show_credential_instructions
fi

if [ -z "${ATLASSIAN_USER_EMAIL:-}" ]; then
    echo "❌ ATLASSIAN_USER_EMAIL not set" >&2
    echo "" >&2
    show_credential_instructions
fi

if [ -z "${JIRA_INSTANCE_URL:-}" ]; then
    echo "❌ JIRA_INSTANCE_URL not set (needs ATLASSIAN_SITE_NAME)" >&2
    echo "" >&2
    show_credential_instructions
fi

# Get arguments
project_key="${1:-}"
issue_type="${2:-}"
summary="${3:-}"
description="${4:-}"

if [ -z "$project_key" ] || [ -z "$issue_type" ] || [ -z "$summary" ]; then
    echo "Usage: jira-create-ticket <project-key> <issue-type> <summary> [description]" >&2
    echo "Example: jira-create-ticket INT Task \"Add rate limiting\" \"Implement rate limiting on auth endpoints\"" >&2
    echo "" >&2
    echo "Common issue types: Task, Bug, Story, Epic, Sub-task" >&2
    exit 1
fi

# Remove trailing slash from instance URL if present
JIRA_INSTANCE_URL="${JIRA_INSTANCE_URL%/}"

# Build JSON payload
if [ -n "$description" ]; then
    # Description provided - use ADF format
    payload=$(jq -n \
        --arg project "$project_key" \
        --arg type "$issue_type" \
        --arg summary "$summary" \
        --arg desc "$description" \
        '{
            fields: {
                project: { key: $project },
                issuetype: { name: $type },
                summary: $summary,
                description: {
                    type: "doc",
                    version: 1,
                    content: [
                        {
                            type: "paragraph",
                            content: [
                                {
                                    type: "text",
                                    text: $desc
                                }
                            ]
                        }
                    ]
                }
            }
        }')
else
    # No description - minimal payload
    payload=$(jq -n \
        --arg project "$project_key" \
        --arg type "$issue_type" \
        --arg summary "$summary" \
        '{
            fields: {
                project: { key: $project },
                issuetype: { name: $type },
                summary: $summary
            }
        }')
fi

# Create issue via Jira API using Basic Auth (email:token)
response=$(curl -s -w "\n%{http_code}" \
    -u "${ATLASSIAN_USER_EMAIL}:${ATLASSIAN_API_TOKEN}" \
    -H "Accept: application/json" \
    -H "Content-Type: application/json" \
    -X POST \
    -d "$payload" \
    "${JIRA_INSTANCE_URL}/rest/api/3/issue")

# Split response into body and status code
http_code=$(echo "$response" | tail -1)
body=$(echo "$response" | sed '$d')

# Check HTTP status
if [ "$http_code" = "404" ]; then
    echo "❌ Resource not found. Check that project key '$project_key' exists." >&2
    exit 2
elif [ "$http_code" = "401" ]; then
    echo "❌ Authentication failed. Check your ATLASSIAN_API_TOKEN and ATLASSIAN_USER_EMAIL" >&2
    exit 3
elif [ "$http_code" = "403" ]; then
    echo "❌ Access denied. You may not have permission to create tickets in project '$project_key'." >&2
    exit 3
elif [ "$http_code" = "400" ]; then
    echo "❌ Bad request. Check your input parameters." >&2
    error_msg=$(echo "$body" | jq -r '.errorMessages[]? // .errors? // .message? // "Unknown error"' 2>/dev/null || echo "Unknown error")
    echo "Error: $error_msg" >&2
    exit 3
elif [[ ! "$http_code" =~ ^2[0-9][0-9]$ ]]; then
    echo "❌ Jira API error (HTTP $http_code)" >&2
    error_msg=$(echo "$body" | jq -r '.errorMessages[]? // .message? // "Unknown error"' 2>/dev/null || echo "Unknown error")
    echo "Error: $error_msg" >&2
    exit 3
fi

# Parse JSON response
key=$(echo "$body" | jq -r '.key')
issue_id=$(echo "$body" | jq -r '.id')

# Output success message
cat <<EOF
✓ Created ticket: ${key}

**View in Jira:** ${JIRA_INSTANCE_URL}/browse/${key}
**Issue ID:** ${issue_id}
EOF
