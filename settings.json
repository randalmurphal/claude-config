{
  "model": "opus",
  "hooks": {
    "PreCompact": [
      {
        "matcher": "auto",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/preserve-context.py"
          }
        ]
      },
      {
        "matcher": "manual",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/preserve-context.py"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/file_protection.py"
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/file_protection.py"
          }
        ]
      },
      {
        "matcher": "MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/file_protection.py"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/file_protection.py"
          }
        ]
      },
      {
        "matcher": "Read",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude-code-docs/claude-docs-helper.sh hook-check"
          }
        ]
      },
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/assumption_detector.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/auto_formatter.py"
          },
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/doc_prompter.py"
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/auto_formatter.py"
          },
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/doc_prompter.py"
          }
        ]
      },
      {
        "matcher": "MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/auto_formatter.py"
          },
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/doc_prompter.py"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "input=$(cat); venv_info=\"\"; if [[ -n \"$VIRTUAL_ENV\" ]]; then venv_info=\"\\033[38;5;214m($(basename \"$VIRTUAL_ENV\"))\\033[0m \"; fi; git_branch=\"\"; if git rev-parse --git-dir >/dev/null 2>&1; then git_branch=\"$(git branch 2>/dev/null | grep '^*' | cut -d' ' -f2-)\"; fi; cwd=\"$(echo \"$input\" | jq -r '.workspace.current_dir')\"; cwd_base=\"$(basename \"$cwd\")\"; printf \"%s[\\033[32m%s\\033[0m:\\033[34m%s\\033[0m]:\\033[90m%s\\033[0m:\\033[35m%s\\033[0m\" \"$venv_info\" \"$(whoami)\" \"$(hostname -s)\" \"$git_branch\" \"$cwd_base\""
  }
}