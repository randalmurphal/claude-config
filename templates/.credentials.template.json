{
  "_comment": "Store your API credentials here. This file is gitignored for security.",
  "_instructions": {
    "github_token": "Create at https://github.com/settings/tokens with 'repo' and 'workflow' scopes",
    "openai_api_key": "Get from https://platform.openai.com/api-keys",
    "anthropic_api_key": "Get from https://console.anthropic.com/",
    "postgres": "Format: postgresql://user:password@host:port/database",
    "aws": "Use AWS CLI to configure: aws configure"
  },
  "github": {
    "token": "{{GITHUB_PERSONAL_ACCESS_TOKEN}}"
  },
  "openai": {
    "api_key": "{{OPENAI_API_KEY}}"
  },
  "anthropic": {
    "api_key": "{{ANTHROPIC_API_KEY}}"
  },
  "databases": {
    "postgres": {
      "connection_string": "{{POSTGRES_CONNECTION_STRING}}"
    },
    "mongodb": {
      "connection_string": "{{MONGODB_CONNECTION_STRING}}"
    }
  },
  "cloud": {
    "aws": {
      "access_key_id": "{{AWS_ACCESS_KEY_ID}}",
      "secret_access_key": "{{AWS_SECRET_ACCESS_KEY}}",
      "region": "{{AWS_REGION}}"
    },
    "gcp": {
      "credentials_path": "{{GCP_CREDENTIALS_PATH}}"
    },
    "azure": {
      "subscription_id": "{{AZURE_SUBSCRIPTION_ID}}",
      "tenant_id": "{{AZURE_TENANT_ID}}"
    }
  }
}